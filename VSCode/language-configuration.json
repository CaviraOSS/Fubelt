{
  "comments": {
    "lineComment": "//",
    "blockComment": ["/*", "*/"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["<", ">"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "'", "close": "'", "notIn": ["string", "comment"] },
    { "open": "\"", "close": "\"", "notIn": ["string"] },
    { "open": "`", "close": "`", "notIn": ["string", "comment"] },
    { "open": "/**", "close": " */", "notIn": ["string"] },
    { "open": "<!--", "close": "-->", "notIn": ["string", "comment"] },
    { "open": "<", "close": ">", "notIn": ["string", "comment"] }
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["'", "'"],
    ["\"", "\""],
    ["`", "`"],
    ["<", ">"]
  ],
  "autoCloseBefore": ";:.,=}])>` \n\t",
  "folding": {
    "markers": {
      "start": "^\\s*//\\s*#?region\\b|^\\s*<!--\\s*#?region\\b|^\\s*{/\\*\\s*#?region\\b",
      "end": "^\\s*//\\s*#?endregion\\b|^\\s*-->\\s*#?endregion\\b|^\\s*\\*/}\\s*#?endregion\\b"
    }
  },
  "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)",
  "indentationRules": {
    "increaseIndentPattern": "^((?!\\/\\/).)*(\\{[^}\"'`]*|\\([^)\"'`]*|\\[[^\\]\"'`]*|<(?!\\/)\\w[^>]*(?<!\\/)>\\s*)$",
    "decreaseIndentPattern": "^((?!.*?\\/\\*).*\\*/)?\\s*[\\}\\]].*$|^\\s*<\\/\\w+[^>]*>\\s*$|^\\s*-->\\s*$"
  },
  "onEnterRules": [
    {
      "beforeText": "^\\s*<([_:\\w][_:\\w-.\\d]*)([^/>]*(?!/)>)[^<]*$",
      "afterText": "^\\s*</([_:\\w][_:\\w-.\\d]*)>",
      "action": {
        "indent": "indentOutdent"
      }
    },
    {
      "beforeText": "^\\s*<(\\w[\\w\\d]*)([^/>]*(?!/)>)[^<]*$",
      "action": {
        "indent": "indent"
      }
    },
    {
      "beforeText": "^\\s*<!--",
      "afterText": "-->",
      "action": {
        "indent": "indentOutdent"
      }
    },
    {
      "beforeText": "^\\s*{",
      "afterText": "^\\s*}",
      "action": {
        "indent": "indentOutdent"
      }
    }
  ]
}
